<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="1"
    android:paddingBottom="15dp"
    android:paddingTop="15dp">
    <ImageView
        android:id="@+id/tasklist_work_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/icon_paper"
        android:layout_toStartOf="@+id/textview_tasktype"
        android:layout_toLeftOf="@+id/textview_tasktype"
        android:layout_alignBottom="@+id/textview_tasktype" />
    <TextView
        android:text="textview_taskdescription"
        style="@style/text_style"
        android:id="@+id/textview_taskdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_weight="0.26"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="80dp"
        />
    <TextView
        android:text="textview_tasktype"
        style="@style/text_style"
        android:id="@+id/textview_tasktype"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textStyle="bold"
        android:layout_weight="0.31"
        android:layout_below="@+id/textview_taskdescription"
        android:layout_alignLeft="@+id/textview_taskdescription"
        android:layout_alignStart="@+id/textview_taskdescription"
        android:padding="1dp" />

</RelativeLayout>
